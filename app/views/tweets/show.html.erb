<p style="color: green"><%= notice %></p>

<div class="border border-primary m-3 p-3 bg-light" style="box-shadow: 0 0 10px black;">
    <%= render @tweet %>
</div>

<div class="d-flex justify-content-evenly">
	<button class="btn bg-info">
		<%= link_to "Back to tweets", tweets_path%>
	</button>
	<button class="btn bg-info">
		<%= link_to "Edit this tweet", edit_tweet_path(@tweet)%>
	</button>
	<%= button_to "Destroy this tweet", @tweet, method: :delete, class:'btn bg-danger' %>
</div>
