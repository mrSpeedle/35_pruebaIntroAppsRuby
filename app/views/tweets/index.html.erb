<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<h1>Tweets</h1>

<!-- Formulario de búsqueda -->
<%= form_with url: tweets_path, method: :get, local: true do %>
  <div>
    <%= label_tag :query, "Buscar Tweets" %>
    <%= text_field_tag :query, params[:query], placeholder: "Buscar por descripción o usuario" %>
    <%= submit_tag "Buscar" %>
  </div>
<% end %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<!-- Agregamos el paginador -->
<div class="pagination">
  <%= paginate @tweets %>
</div>

<%= link_to "New tweet", new_tweet_path %>
