<p style="color: green"><%= notice %></p>

<% content_for :title, "Tweets" %>

<div id="tweets" class="px-4">
  <% @tweets.each do |tweet| %>
    <div id="<%= dom_id tweet %>" class="bg-light border my-3 p-3" style="box-shadow: none;">
      <p>
        <img src="<%= tweet.profile_image_url %>" alt="Profile Image" class="rounded-circle me-2" style="width: 50px; height: 50px;">
        <strong><%= tweet.user_name %></strong>
        <span class="text-muted"> Â· <%= tweet.created_at.strftime("%d %b %Y at %H:%M") %></span>
      </p>
      <p><%= tweet.description %></p>
      <div class="text-end">
        <%= link_to "Ver tweet", tweet, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<div class="pagination d-flex justify-content-center mt-4">
  <%= paginate @tweets %>
</div>
